<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset addfieldpath="/administrator/components/com_gameserver/models/fields">
    <field
			name="serverid"
			type="hidden"
		/>
    <field
			name="displayname"
			type="text"
			label="COM_GAMESERVER_DISPLAYNAME"
			description="COM_GAMESERVER_DISPLAYNAME_DESC"
			size="60"
			class="inputbox"
			default=""
      required="true"
		/>
    <field
        name="type"
        type="GameType"
        multiple="false"
        label="COM_GAMESERVER_GAME"
        description="COM_GAMESERVER_GAME_DESC"
        size="10"
        class="inputbox"
        required="true"
		/>
    <field
			name="ip"
			type="text"
			label="COM_GAMESERVER_IP"
			description="COM_GAMESERVER_IP_DESC"
			size="60"
			class="inputbox"
			default=""
      required="true"
		/>
    <field
			name="port"
			type="text"
			label="COM_GAMESERVER_PORT"
			description="COM_GAMESERVER_PORT_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
    <field
			name="port2"
			type="text"
			label="COM_GAMESERVER_PORT2"
			description="COM_GAMESERVER_PORT2_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
    <field
			name="user"
			type="text"
			label="COM_GAMESERVER_USER"
			description="COM_GAMESERVER_USER_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
    <field
			name="pass"
			type="text"
			label="COM_GAMESERVER_PASS"
			description="COM_GAMESERVER_PASS_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
    <field
			name="url"
			type="text"
			label="COM_GAMESERVER_URL"
			description="COM_GAMESERVER_URL_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
    <field
         name="description"
         type="editor"
         label="COM_GAMESERVER_DESCRIPTION"
         description="COM_GAMESERVER_DESCRIPTION_DESC"
         class="inputbox"
         filter="JComponentHelper::filterText"
         buttons="true"
         hide="readmore,pagebreak"	/>
    <field
			name="showsettings"
			type="list"
			label="COM_GAMESERVER_SHOWSETTINGS"
			description="COM_GAMESERVER_SHOWSETTINGS_DESC"
			size="1"
			class="inputbox"
			default="1"	>
      <option value="1">
        JYES
      </option>
      <option value="0">
        JNO
      </option>
    </field>
    <field
      label="COM_GAMESERVER_ADDEDBY"
			description="COM_GAMESERVER_ADDEDBY_DESC"
      name="addedby"
      type="hidden"
    />
    <field id="published"
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
      <option value="1">
        JPUBLISHED
      </option>
      <option value="0">
        JUNPUBLISHED
      </option>
    </field>
    <field
      name="ordering"
      type="hidden"
		    />
    <field
      name="country"
      type="hidden"
		/>
    <field
			name="region"
			type="hidden"
		/>
  </fieldset>
</form>
