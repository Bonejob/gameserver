<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade" >
  <name>GameServer Detail</name>
  <author>Lars Hildebrandt</author>
  <creationDate>11.06.2012</creationDate>
  <copyright>Lars Hildebrandt</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>info@larshildebrandt.de</authorEmail>
  <authorUrl>www.larshildebrandt.de</authorUrl>
  <version>3.0</version>
  <description>Module fuer die Anzeige eines GameServers</description>
  <languages>
    <language tag="en-GB">language/en-GB.mod_gameserver_details.ini</language>
	<language tag="en-GB">language/en-GB.mod_gameserver_details.sys.ini</language>
    <language tag="de-DE">language/de-DE.mod_gameserver_details.ini</language>
	<language tag="de-DE">language/de-DE.mod_gameserver_details.sys.ini</language>
  </languages>
  <files>
    <filename module="mod_gameserver_details">mod_gameserver_details.php</filename>
    <filename module="mod_gameserver_details">index.html</filename>
    <filename module="mod_gameserver_details">tmpl/default.php</filename>
    <filename module="mod_gameserver_details">tmpl/index.html</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic" addfieldpath="/administrator/components/com_gameserver/models/fields">
        <field name="cachemode"
          type="hidden"
          default="itemid">
          <option value="itemid"></option>
        </field>
        <!--<field name="serverid" type="text" default="" label="Server-ID" description="ID of server" />-->
        <field
          name="serverid"
          type="gameserver"
          label="MOD_GAMESERRVER_DETAILS_SELECT_SERVER"
          required="true"
          description="MOD_GAMESERRVER_DETAILS_SELECT_SERVER_DESC" />
        <field name="mapimagewidth" type="text" default="200" label="MOD_GAMESERRVER_DETAILS_MAPIMAGEWIDTH" description="MOD_GAMESERRVER_DETAILS_MAPIMAGEWIDTH_DESC" />
        <field name="showmap" type="list" default="1" label="MOD_GAMESERRVER_DETAILS_SHOWLOGO" description="MOD_GAMESERRVER_DETAILS_SHOWLOGO_DESC">
          <option value="1">MOD_GAMESERRVER_DETAILS_YES</option>
          <option value="0">MOD_GAMESERRVER_DETAILS_NO</option>
        </field>
        <field name="showplayers" type="list" default="1" label="MOD_GAMESERRVER_DETAILS_SHOWPLAYER" description="MOD_GAMESERRVER_DETAILS_SHOWPLAYER_DESC">
          <option value="1">MOD_GAMESERRVER_DETAILS_YES</option>
          <option value="0">MOD_GAMESERRVER_DETAILS_NO</option>
        </field>
        <field name="maxplayerlistheight" type="text" default="-1" label="MOD_GAMESERRVER_DETAILS_MAXPLAYERLISTHEIGHT" description="MOD_GAMESERRVER_DETAILS_MAXPLAYERLISTHEIGHT_DESC" />
        <field name="customurl" type="text" default="" label="MOD_GAMESERRVER_DETAILS_CUSTOMURL" description="MOD_GAMESERRVER_DETAILS_CUSTOMURL_DESC" />
        <field name="updateinterval" type="text" default="30" label="MOD_GAMESERRVER_DETAILS_UPDATE_INTERVAL" description="MOD_GAMESERRVER_DETAILS_UPDATE_INTERVAL_DESC" />
      </fieldset>
		<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>	  
    </fields>
  </config>
</extension>
